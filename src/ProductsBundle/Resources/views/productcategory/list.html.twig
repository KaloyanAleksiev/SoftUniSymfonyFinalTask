{% extends 'base.html.twig' %}

{% block body %}
    {% if parentCategory is defined %}
        <h1>{{ parentCategory.title }} list</h1>
    {% else %}
        <h1>Category list</h1>
    {% endif %}
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
        </tr>
        </thead>
        <tbody>

        {% for productCategory in productCategories %}
            <tr>
        {#@var productCategory \ProductsBundle\Entity\ProductCategory#}

            {% if productCategory.children|length %}
                <td><a href="{{ path('admin_product-category_list_by_parent', { 'id': productCategory.id }) }}">{{ productCategory.title}}</a></td>
                <td><a href="{{ path('admin_product-category_list_by_parent', { 'id': productCategory.id }) }}"><img width="100px" height="100px    " src="{{ asset('uploads/product-category/' ~ productCategory.image) }}"></a></td>
            {% else %}
                <td><a href="{{ path('admin_product-product_list_by_category', { 'id': productCategory.id }) }}">{{ productCategory.title}}</a></td>
                <td><a href="{{ path('admin_product-product_list_by_category', { 'id': productCategory.id }) }}"><img width="100px" height="100px    " src="{{ asset('uploads/product-category/' ~ productCategory.image) }}"></a></td>
            {% endif %}
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}