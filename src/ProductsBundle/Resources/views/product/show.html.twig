{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ product.subtitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price/100 }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ product.rank }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>

            {% if product.productCategories|length > 0 %}
            <tr>
                <th>Categories</th>
                <td>
                    <ul>
                        {% for category in product.productCategories %}
                            <li>{{ category }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            {% endif %}
            {% if product.image != null %}
            <tr>
                <th>Image Preview:</th>
                <td><img width="300px" src="{{ asset('uploads/product/' ~ product.image) }}"></td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_product_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_product_edit', { 'id': product.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
