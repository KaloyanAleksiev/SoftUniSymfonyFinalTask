{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ product.title }}</td>
        </tr>
        <tr>
            <th>Subtitle</th>
            <td>{{ product.subtitle }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ product.slug }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price/100 }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        {% if product.image != null %}
        <tr>
            <th>Image Preview:</th>
            <td><img width="300px" src="{{ asset('uploads/product/' ~ product.image) }}"></td>
        </tr>
        {% endif %}
{% endblock %}